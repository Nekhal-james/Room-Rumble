rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // We are using a public collection path for the rooms
    // The path is /artifacts/{appId}/public/data/rooms/{roomId}
    
    match /artifacts/{appId}/public/data/rooms/{roomId} {
      
      // Anyone who is authenticated can read the room state
      allow read: if request.auth != null;
      
      // A user can create a room if they are authenticated and
      // they set themselves as the hostId.
      allow create: if request.auth != null 
                    && request.resource.data.hostId == request.auth.uid;
                    
      // A user can update a room if...
      allow update: if request.auth != null && (
        // They are the host (can do anything)
        resource.data.hostId == request.auth.uid ||
        
        // They are a new player joining the room
        (request.resource.data.players.size() == resource.data.players.size() + 1 &&
         request.resource.data.players[request.resource.data.players.size() - 1].id == request.auth.uid) ||
         
        // They are an existing player already in the room (e.g., to make a guess)
        (request.auth.uid in resource.data.players.map(p => p.id))
      );
      
      // Only the host can delete the room.
      // (The leaveRoom function handles deleting the room if the last player leaves)
      allow delete: if request.auth != null && resource.data.hostId == request.auth.uid;
    }
  }
}